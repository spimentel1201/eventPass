# ==========================================
# NeonPass Backend - Environment Variables EXAMPLE
# Copy to .env and configure your values
# ==========================================

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neonpass
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Security (Base64 encoded, min 256 bits)
# Generate with: echo -n "your-secret-key-min-32-chars" | base64
JWT_SECRET=your-base64-encoded-secret-here

# Ticket QR Signing
TICKET_SIGNING_SECRET=your-ticket-signing-secret-here

# Cloudinary (Image Storage) - Get from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
